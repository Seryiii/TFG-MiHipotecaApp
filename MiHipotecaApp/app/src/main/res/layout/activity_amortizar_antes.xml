                android:layout_weight="1"
                android:fontFamily="@font/allerta"
                android:gravity="center"
                android:text="Reducción de plazo"
                android:textSize="15sp" />

        </LinearLayout> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:fontFamily="@font/allerta"
                        android:text="Dinero amortizado"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/edit_dinero_amort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edit_text2"
                        android:fontFamily="@font/allerta"
                        android:hint="     € "
                        android:inputType="number|numberDecimal"/>

                    <ImageButton
                        android:id="@+id/btn_info_dinero_amort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/info"
                        android:layout_marginLeft="10dp"
                        android:background="@null"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/allerta"
                    android:gravity="center"
                    android:text="Reducción de plazo"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edit_reduccion_plazo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_edit_text2"
                    android:fontFamily="@font/allerta"
                    android:hint="meses"
                    android:inputType="number"/>

                <ImageButton
                    android:id="@+id/btn_info_reduccion_plazo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/info"
                    android:layout_marginLeft="10dp"
                    android:background="@null"/>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:background="@drawable/btn_bordes_redondos">

        <TextView
            android:id="@+id/cuota_mensual_seguimiento_hip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/allerta"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="PONER LA INFO EN FUNCION DE LO QUE ESCOJA EL USUARIO"
            android:textSize="22sp" />
    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>