<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_aplicacion"
    tools:context=".UsuarioRegistrado.HipotecasSeguimiento.VisualizarHipotecaSeguimiento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="297dp"
            android:layout_height="101dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/allerta"
            android:gravity="center"
            android:text="@string/label_seguimiento"
            android:textSize="40sp" />

        <TextView
        android:id="@+id/titulo_seguimiento_hipoteca"
        android:layout_width="297dp"
        android:layout_height="101dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        android:text=""
        android:textSize="40sp" />

        <Button
            android:id="@+id/go_bar_chart"
            android:text="BAR CHART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        </Button>

        <Button
            android:id="@+id/go_pie_chart"
            android:text="PIE CHART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        </Button>

        <Button
            android:id="@+id/go_radar_chart"
            android:text="RADAR CHART"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        </Button>

    </LinearLayout>

</ScrollView>